<% if @routers.any? %>
    <% @routers.each do |router| %>
      <div class="card">
        <a href="<%= "#{router.scheme}://#{router.hostnames.first}" %>">
        <% if get_icon(router) %>
          <img src="<%= get_icon(router) %>" alt="">
          <% else %>
          <div class="holder" data-service="<%= router.service %>">
            <i class="fas fa-<%= router.service[0] %>"></i>
          </div>
          <% end %>
          <span class="serviceName"><%= router.service %></span>

        </a>
        <div class="dropdown dropdown-right">
          <i class="fas fa-ellipsis-v dropdown-icon small-dropdown"></i>
          <div class="dropdown-content">
            <a href="/ignore/<%=router.service%>"><i class="fas dropdown-icon fa-ban"></i> Ignore</a>
          </div>
        </div>
      </div>
    <% end %>
<% else %>
  <p>No enabled routers found.</p>
<% end %>